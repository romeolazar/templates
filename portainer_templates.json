{
  "version": "3",
  "templates": [
    {
      "id": 1,
      "type": 3,
      "title": "Media Stack (Jellyfin + Arr + Plex)",
      "name": "media-stack",
      "description": "Deploys Jellyfin, Jellyseerr, Jellystat (+ Postgres), Prowlarr, FlareSolverr, qBittorrent, Bazarr, Radarr, Sonarr, Lidarr, and Plex using your docker-compose.yml.",
      "note": "This template deploys a Compose stack from your GitHub repo. Ensure the host paths you provide (APPDIR, MEDIADIR, etc.) exist and that /dev/dri is available for hardware acceleration.",
      "categories": ["Media", "Downloaders", "Automation"],
      "platform": "linux",
      "logo": "https://raw.githubusercontent.com/jellyfin/jellyfin-ux/master/branding/SVG/icon-transparent.svg",
      "stackfile": "https://raw.githubusercontent.com/romeolazar/templates/main/docker-compose.yml",
      "env": [
        { "name": "PUID", "label": "PUID", "default": "1000" },
        { "name": "PGID", "label": "PGID", "default": "1000" },
        { "name": "TZ", "label": "Timezone (TZ)", "default": "Europe/Bucharest" },

        { "name": "APPDIR", "label": "App data base path (APPDIR)", "default": "/opt/appdata" },
        { "name": "MEDIADIR", "label": "Media path (MEDIADIR)", "default": "/tank/media" },
        { "name": "VIDEOSDIR", "label": "Videos path (VIDEOSDIR)", "default": "/tank/videos" },
        { "name": "DOWNLOADDIR", "label": "Downloads path (DOWNLOADDIR)", "default": "/tank/downloads" },

        { "name": "JELLYSTAT_POSTGRES_USER", "label": "Jellystat Postgres user", "default": "jellystat" },
        { "name": "JELLYSTAT_POSTGRES_PASSWORD", "label": "Jellystat Postgres password", "default": "" },
        { "name": "JELLYSTAT_JWT_SECRET", "label": "Jellystat JWT secret", "default": "" },

        { "name": "PLEX_CLAIM", "label": "Plex claim token (optional)", "default": "" }
      ]
    }
  ]
}
