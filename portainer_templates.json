{
  "version": "3",
  "templates": [
    {
      "id": 1001,
      "type": 1,
      "title": "Jellyfin",
      "name": "jellyfin",
      "note": "Runs Jellyfin using host networking.\n\nEnsure host paths exist:\nmkdir -p /opt/appdata/jellyfin/config\nmkdir -p /opt/appdata/jellyfin/cache\n\nNotes:\n- Uses /dev/dri for HW accel (Intel iGPU)\n- Uses /dev/shm for transcode\n- Host network means Jellyfin binds directly to host ports.",
      "description": "Jellyfin media server.",
      "categories": ["Media Servers"],
      "platform": "linux",
      "logo": "https://raw.githubusercontent.com/jellyfin/jellyfin-ux/master/branding/SVG/icon-transparent.svg",
      "image": "jellyfin/jellyfin:latest",
      "network": "host",
      "env": [
        { "name": "PUID", "label": "PUID", "default": "1000", "description": "UID that owns the host folders." },
        { "name": "PGID", "label": "PGID", "default": "1000", "description": "GID that owns the host folders." },
        { "name": "TZ", "label": "TZ", "default": "Europe/Bucharest", "description": "Timezone." }
      ],
      "volumes": [
        { "container": "/config", "bind": "/opt/appdata/jellyfin/config" },
        { "container": "/cache", "bind": "/opt/appdata/jellyfin/cache" },
        { "container": "/transcode", "bind": "/dev/shm" },
        { "container": "/tank", "bind": "/tank/media" },
        { "container": "/videos", "bind": "/tank/videos" }
      ],
      "devices": [
        { "host": "/dev/dri", "container": "/dev/dri" }
      ],
      "restart_policy": "unless-stopped"
    },

    {
      "id": 1002,
      "type": 1,
      "title": "Jellyseerr",
      "name": "jellyseerr",
      "note": "Ensure host path exists:\nmkdir -p /opt/appdata/jellyseerr/config",
      "description": "Jellyseerr request management for Jellyfin/Plex.",
      "categories": ["Media"],
      "platform": "linux",
      "logo": "https://raw.githubusercontent.com/fallenbagel/jellyseerr/develop/public/os_logo_square.png",
      "image": "ghcr.io/fallenbagel/jellyseerr:latest",
      "network": "media_net",
      "env": [
        { "name": "TZ", "label": "TZ", "default": "Europe/Bucharest", "description": "Timezone." },
        { "name": "LOG_LEVEL", "label": "LOG_LEVEL", "default": "info", "description": "Log level." }
      ],
      "ports": ["5055:5055/tcp"],
      "volumes": [
        { "container": "/app/config", "bind": "/opt/appdata/jellyseerr/config" }
      ],
      "restart_policy": "unless-stopped"
    },

    {
      "id": 1003,
      "type": 1,
      "title": "Jellystat",
      "name": "jellystat",
      "note": "Requires Postgres. Deploy the 'Jellystat-DB (Postgres)' template first.\n\nThis template expects the database hostname 'jellystat-db' on network 'media_net'.\nCreate the network once:\ndocker network create media_net\n\nEnsure host path exists:\nmkdir -p /opt/appdata/jellystat/backup-data",
      "description": "Jellystat analytics dashboard for Jellyfin.",
      "categories": ["Monitoring", "Media"],
      "platform": "linux",
      "logo": "https://raw.githubusercontent.com/CyferShepard/Jellystat/master/frontend/public/logo192.png",
      "image": "cyfershepard/jellystat:latest",
      "network": "media_net",
      "env": [
        { "name": "POSTGRES_USER", "label": "POSTGRES_USER", "default": "jellystat", "description": "Database username." },
        { "name": "POSTGRES_PASSWORD", "label": "POSTGRES_PASSWORD", "default": "", "description": "Database password." },
        { "name": "POSTGRES_IP", "label": "POSTGRES_IP", "default": "jellystat-db", "description": "Database hostname (container name on media_net)." },
        { "name": "POSTGRES_PORT", "label": "POSTGRES_PORT", "default": "5432", "description": "Database port." },
        { "name": "JWT_SECRET", "label": "JWT_SECRET", "default": "", "description": "Set a long random secret." },
        { "name": "TZ", "label": "TZ", "default": "Europe/Bucharest", "description": "Timezone." }
      ],
      "ports": ["3011:3000/tcp"],
      "volumes": [
        { "container": "/app/backend/backup-data", "bind": "/opt/appdata/jellystat/backup-data" }
      ],
      "restart_policy": "unless-stopped"
    },

    {
      "id": 1004,
      "type": 1,
      "title": "Jellystat-DB (Postgres 15)",
      "name": "jellystat-db",
      "note": "Database for Jellystat.\n\nCreate the network once:\ndocker network create media_net\n\nEnsure host path exists:\nmkdir -p /opt/appdata/jellystat/postgres-data",
      "description": "Postgres database used by Jellystat.",
      "categories": ["Database"],
      "platform": "linux",
      "logo": "https://raw.githubusercontent.com/docker-library/docs/master/postgres/logo.png",
      "image": "postgres:15.14",
      "network": "media_net",
      "env": [
        { "name": "POSTGRES_USER", "label": "POSTGRES_USER", "default": "jellystat", "description": "Database username." },
        { "name": "POSTGRES_PASSWORD", "label": "POSTGRES_PASSWORD", "default": "", "description": "Database password." }
      ],
      "volumes": [
        { "container": "/var/lib/postgresql/data", "bind": "/opt/appdata/jellystat/postgres-data" }
      ],
      "restart_policy": "unless-stopped"
    },

